<body>
    <div class="container">
        <h1>Soma de dois números</h1>
            <p>
                <label for="inum1">Primeiro Número: </label>
                <input type="number" name="num1" id="inum1" autocomplete="off">
            </p>
            <p>
                <label for="inum2">Segundo Número: </label>
                <input type="number" name="num2" id="inum2" autocomplete="off">
            </p>
            <button onclick="somar()">Somar</button>
            <p id="resultado"></p>
    </div>

    <script>
        function somar() {
            const num1 = parseInt(document.getElementById('inum1').value);
            const num2 = parseInt(document.getElementById('inum2').value);
            const resultado = document.getElementById('resultado');
            const soma = num1 + num2;
            resultado.innerHTML = `A soma de ${num1} e ${num2} é: ${soma}`;
        }
    </script>
</body>
